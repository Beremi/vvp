{
    "name": "VVP_docker",
    "dockerFile": "Dockerfile",
    "hostRequirements": {
        "cpus": 2
    },
    "waitFor": "onCreateCommand",
    "onCreateCommand": "bash .devcontainer/setup-venv.sh",
    "updateContentCommand": "bash .devcontainer/setup-venv.sh",
    "customizations": {
        "codespaces": {
            "openFiles": []
        },
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "${containerWorkspaceFolder}/.venv/bin/python",
                "python.terminal.activateEnvironment": true,
                "jupyter.jupyterServerType": "local"
            },
            "extensions": [
                "ms-toolsai.jupyter",
                "ms-python.python",
                "github.vscode-pull-request-github",
                "ms-python.vscode-pylance",
                "ms-python.flake8",
                "ms-python.autopep8",
                "mhutchie.git-graph"
            ]
        }
    }
}
